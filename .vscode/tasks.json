{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\[watch\\] build started",
          "endsPattern": "\\[watch\\] build finished"
        },
        "pattern": {
          "regexp": "^(?<file>.*):(?<line>\\d+):(?<column>\\d+):\\s+(?<message>.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "label": "npm: watch"
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": [],
      "label": "npm: compile"
    }
  ]
}
